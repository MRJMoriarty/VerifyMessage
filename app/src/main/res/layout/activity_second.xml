<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/safe"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/t3" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/发送验证码"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/t3"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/phonenumber"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:gravity="center_vertical"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/pen"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/t4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/t4" app:layout_constraintBottom_toBottomOf="@+id/t4"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:id="@+id/phonenumber" android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark" app:layout_constraintStart_toEndOf="@+id/t3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/t4"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintTop_toTopOf="@+id/t3" app:layout_constraintBottom_toBottomOf="@+id/t3"/>
    <TextView
            android:text="@string/发送了验证码"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/t4" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/phonenumber" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/phonenumber"
            app:layout_constraintBottom_toBottomOf="@+id/phonenumber" android:gravity="center_vertical"/>
    <EditText
            android:layout_width="383dp"
            android:layout_height="50dp"
            android:id="@+id/container"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/n1"
            app:layout_constraintBottom_toBottomOf="@+id/n1"
            android:alpha="0.01"
            android:cursorVisible="false"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/n1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/n2"
            android:background="@drawable/border" android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:gravity="center" android:textSize="18sp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/n4" app:layout_constraintStart_toEndOf="@+id/n3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/n5"
            android:background="@drawable/border"
            app:layout_constraintTop_toTopOf="@+id/n3" app:layout_constraintBottom_toBottomOf="@+id/n3"
            android:gravity="center" android:textSize="18sp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/n3" app:layout_constraintStart_toEndOf="@+id/n2"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/n4"
            android:background="@drawable/border" app:layout_constraintTop_toTopOf="@+id/n2"
            app:layout_constraintBottom_toBottomOf="@+id/n2" android:gravity="center" android:textSize="18sp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/n6" app:layout_constraintStart_toEndOf="@+id/n5"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@drawable/border"
            app:layout_constraintTop_toTopOf="@+id/n5" app:layout_constraintBottom_toBottomOf="@+id/n5"
            android:gravity="center" android:textSize="18sp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/n5" app:layout_constraintStart_toEndOf="@+id/n4"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/n6"
            android:background="@drawable/border"
            app:layout_constraintTop_toTopOf="@+id/n4" app:layout_constraintBottom_toBottomOf="@+id/n4"
            android:gravity="center" android:textSize="18sp"/>
    <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/n2" app:layout_constraintStart_toEndOf="@+id/n1"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/n3"
            android:background="@drawable/border"
            app:layout_constraintTop_toTopOf="@+id/n1" app:layout_constraintBottom_toBottomOf="@+id/n1"
            android:gravity="center" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>